<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gigglebytes.ui.MainWindow">

    <ImageView fx:id="backgroundImage"
               pickOnBounds="true"
               preserveRatio="false"
               StackPane.alignment="CENTER" />

    <AnchorPane style="-fx-background-color: transparent;"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <children>
            <ScrollPane fx:id="scrollPane"
                        hbarPolicy="NEVER"
                        vvalue="1.0"
                        style="-fx-background: transparent; -fx-background-color: transparent;"
                        AnchorPane.bottomAnchor="60.0"
                        AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0">
                <content>
                    <VBox fx:id="dialogContainer"
                          spacing="10.0"
                          style="-fx-background-color: transparent;"
                          AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0" />
                </content>
            </ScrollPane>

            <TextField fx:id="userInput"
                       onAction="#handleUserInput"
                       prefHeight="41.0"
                       promptText="Enter command..."
                       style="-fx-opacity: 0.95; -fx-background-radius: 20; -fx-background-color: rgba(30, 30, 30, 0.9); -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;"
                       AnchorPane.bottomAnchor="10.0"
                       AnchorPane.leftAnchor="10.0"
                       AnchorPane.rightAnchor="90.0" />

            <Button fx:id="sendButton"
                    mnemonicParsing="false"
                    onAction="#handleUserInput"
                    prefHeight="41.0"
                    prefWidth="75.0"
                    text="Send"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;"
                    AnchorPane.bottomAnchor="10.0"
                    AnchorPane.rightAnchor="10.0" />
        </children>
    </AnchorPane>
</StackPane>